@model CapaEntidades.Cliente

@{
    ViewBag.Title = "Insertar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- [ form-element ] start -->
<div class="col-sm-12">
    <div class="card">
        <div class="card-body">
            <h5>Registar Cliente</h5>
            <hr>
            <form action="Insertar" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Nombres</label>
                            <input type="text" class="form-control" id="txtNombres" name="txtNombres" required>
                        </div>
                        <div class="form-group">
                            <label>Apellidos</label>
                            <input type="text" class="form-control" id="txtApellidos" name="txtApellidos" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Direccion</label>
                            <input type="text" class="form-control" id="txtDireccion" name="txtDireccion" required>
                        </div>
                        <div class="form-group">
                            <label>Celular</label>
                            <input type="number" class="form-control" id="txtCelular" name="txtCelular" required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-success"> <i class="feather icon-check-circle"></i>Registar</button>
                        <a href="@Url.Action("Listar","Cliente")" style="color:white" class="btn btn-danger"><i class="feather icon-slash"></i>Cancelar</a>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- [ form-element ] end -->
<!-- [ form-element ] end -->

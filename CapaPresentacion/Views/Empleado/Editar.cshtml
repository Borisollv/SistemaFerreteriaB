@model CapaEntidades.Empleado

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Editar Empleado</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Registro
        </div>
        <div class="card-body">
            <form action="Editar" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <input class="form-control" id="txtIdEmpleado" name="txtIdEmpleado" type="text" value="@Model.idEmpleado" hidden />
                        <div class="form-floating mb-3 mb-md-0">
                            <input class="form-control" id="txtNombres" name="txtNombres" type="text" placeholder="Nombres" value="@Model.nombres" />
                            <label for="txtNombres">Nombres</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input class="form-control" id="txtApellidos" name="txtApellidos" type="text" placeholder="Apellidos" value="@Model.apellidos" />
                            <label for="txtApellidos">Apellidos</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input class="form-control" id="txtDni" name="txtDni" type="text" placeholder="DNI" value="@Model.dni" />
                            <label for="txtDni">DNI</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input class="form-control" id="txtCelular" name="txtCelular" type="text" placeholder="Celular" value="@Model.celular" />
                            <label for="txtCelular">Celular</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input class="form-control" id="txtCorreo" name="txtCorreo" type="email" placeholder="Correo" value="@Model.correo" />
                            <label for="txtCorreo">Correo</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input class="form-control" id="txtPuesto" name="txtPuesto" type="text" placeholder="Puesto" value="@Model.puesto" />
                            <label for="txtPuesto">Puesto</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input class="form-control" id="txtUsuario" name="txtUsuario" type="text" placeholder="Usuario" value="@Model.usuario" />
                            <label for="txtUsuario">Usuario</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input class="form-control" id="txtContrasena" name="txtContrasena" type="password" placeholder="Contraseña" value="@Model.contrasena" />
                            <label for="txtContrasena">Contraseña</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <div class="d-grid">
                                <a class="btn btn-primary btn-block" href="@Url.Action("Lista","Empleado")">Regresar</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <div class="d-grid">
                                <button class="btn btn-primary btn-block">Registrar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
            </form>
        </div>
    </div>
</div>
